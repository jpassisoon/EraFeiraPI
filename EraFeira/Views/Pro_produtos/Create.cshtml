@model EraFeira.Models.Pro_produto

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<link href="~/Content/CadastroProduto.css" rel="stylesheet" />

@using (Html.BeginForm("Create", "Pro_produtos", FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal pro_form">
        <h4 class="cp-titulo">Cadastro de produto</h4>
        
        @Html.ValidationSummary(true, "", new { @class = "msg-val" })
        
        <div class="form-group">
            @Html.LabelFor(model => model.Pro_descricao, htmlAttributes: new { @class = "control-label col-md-3 pro_label" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.Pro_descricao, new { htmlAttributes = new { @class = "form-control pro_input" } })
                @Html.ValidationMessageFor(model => model.Pro_descricao, "", new { @class = "msg-val" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Pro_valor_venda, htmlAttributes: new { @class = "control-label col-md-3 pro_label" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.Pro_valor_venda, new { htmlAttributes = new { @class = "form-control pro_input" } })
                @Html.ValidationMessageFor(model => model.Pro_valor_venda, "", new { @class = "msg-val" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Pro_desconto, htmlAttributes: new { @class = "control-label col-md-3 pro_label" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.Pro_desconto, new { htmlAttributes = new { @class = "form-control pro_input" } })
                @Html.ValidationMessageFor(model => model.Pro_desconto, "", new { @class = "msg-val" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Pro_foto, htmlAttributes: new { @class = "control-label col-md-3 pro_label" })
            <div class="col-md-9">
                @*@Html.EditorFor(model => model.Pro_foto, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Pro_foto, "", new { @class = "text-danger" })*@
                <input name="arq" class="form-control pro_input" type="file" />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Cat_id, "Cat_id", htmlAttributes: new { @class = "control-label col-md-3 pro_label" })
            <div class="col-md-9">
                @Html.DropDownList("Cat_id", null, htmlAttributes: new { @class = "form-control pro_input" })
                @Html.ValidationMessageFor(model => model.Cat_id, "", new { @class = "msg-val" })
            </div>
        </div>

        <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn pro_cadastro" />
        </div>
    </div>
}

