            </label>

            <label>
                <!-- v-on:click="typeChange()"-->
                <input type="radio" value="2" name="QtdEntregas" funcao="qtdEntregas" class="card-input-element" />
                <div class="card-input exc"">
                    <p class="btn-size">
                        2
                    </p>
                </div>
            </label>
            <label>
                <!-- v-on:click="typeChange()"-->
                <input type="radio" value="3" name="QtdEntregas" funcao="qtdEntregas" class="card-input-element exc" />
                <div class="card-input exc"">
