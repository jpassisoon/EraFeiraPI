@model EraFeira.ViewModels.CadastroAdministradorViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout3.cshtml";
}
<link href="~/Content/AutenticacaoAdministrador.css" rel="stylesheet" />
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal form-adm-cadastro">
    <h1 class="h1-cadastro-adm">Cadastro - Administrador </h1>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label label-adm" })
        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control inpu-adm" } })
        @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "msg-val" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label label-adm" })
        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control inpu-adm" } })
        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "msg-val" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Senha, htmlAttributes: new { @class = "control-label label-adm" })
        @Html.EditorFor(model => model.Senha, new { htmlAttributes = new { @class = "form-control inpu-adm" } })
        @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "msg-val" })
    </div>

    <div class="form-group">
        <input type="submit" value="Cadastrar" class="btn btn-cadastro-adm" />
    </div>
</div>
}
