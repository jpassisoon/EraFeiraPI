@model EraFeira.Models.For_fornecedor

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<link href="~/Content/Fornecedor.css" rel="stylesheet" />
<h1 class="for-h1">Cadastro de fornecedor</h1>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal for-form">
        
        @Html.ValidationSummary(true, "", new { @class = "msg-val" })
        <div class="form-group">
            @Html.LabelFor(model => model.For_nome, htmlAttributes: new { @class = "control-label col-md-3 for-label" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.For_nome, new { htmlAttributes = new { @class = "form-control for-input" } })
                @Html.ValidationMessageFor(model => model.For_nome, "", new { @class = "msg-val" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.For_telefone, htmlAttributes: new { @class = "control-label col-md-3 for-label" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.For_telefone, new { htmlAttributes = new { @class = "form-control for-input" } })
                @Html.ValidationMessageFor(model => model.For_telefone, "", new { @class = "msg-val" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.For_documento, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.For_documento, new { htmlAttributes = new { @class = "form-control for-input" } })
                @Html.ValidationMessageFor(model => model.For_documento, "", new { @class = "msg-val" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.End_id, "End_id", htmlAttributes: new { @class = "control-label col-md-3 for-label" })
            <div class="col-md-9">
                @Html.DropDownList("End_id", null, htmlAttributes: new { @class = "form-control for-input" })
                @Html.ValidationMessageFor(model => model.End_id, "", new { @class = "msg-val" })
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Cadastrar" class="btn for-cadastro" />
        </div>
    </div>
}
